for(i in 1:n){
D[i] = sqrt((xF[i] - xM[i])^2 + (yF[i] - yM[i])^2)
}
hist(D, breaks = 30, prob = TRUE)
est = sum(D) / n
# i.
Z = rep(c(0), n)
for(i in 1:n){
if(D[i] < 15){
Z[i] = 1
}
}
# ii.
p_E = sum(Z) / n
